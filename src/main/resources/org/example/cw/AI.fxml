<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.TilePane?>

<AnchorPane prefHeight="600" prefWidth="800" style="-fx-background-color: #E8F5E9;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.cw.AIController">
    <!-- Title -->
    <Label layoutX="280.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-text-fill: #2E7D32; -fx-font-weight: bold;" text="Health Articles" />

    <!-- ScrollPane -->
    <ScrollPane fx:id="articleScrollPane" layoutX="25.0" layoutY="80.0" prefHeight="480.0" prefWidth="750.0" style="-fx-background-color: transparent;">
        <!-- TilePane inside ScrollPane -->
        <TilePane fx:id="articleTilePane" alignment="CENTER" hgap="10" prefColumns="3" style="-fx-padding: 10;" vgap="10">
            <!-- Articles will be dynamically added here -->
        </TilePane>
    </ScrollPane>
    <Hyperlink layoutX="40.0" layoutY="560.0" text="Back" onAction="#onBackToHomeClick"/>
</AnchorPane>
