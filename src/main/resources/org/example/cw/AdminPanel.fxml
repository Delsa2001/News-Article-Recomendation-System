<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.TilePane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.cw.AdminPanelController">
    <children>
        <!-- Sidebar -->
        <AnchorPane layoutX="-7.0" prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #2C3E50;">
            <children>
                <ImageView fitHeight="30.0" fitWidth="31.0" layoutX="27.0" layoutY="428.0">
                    <image>
                        <Image url="@images/settings.png" />
                    </image>
                </ImageView>
                <Label layoutX="72.0" layoutY="434.0" text="Settings" textFill="WHITE" />
                <Hyperlink layoutX="32.0" layoutY="472.0" text="Profile" style="-fx-text-fill: #ecf0f1;" />
                <Hyperlink layoutX="34.0" layoutY="497.0" text="Privacy" onAction="#onPrivacyButtonClick" style="-fx-text-fill: #ecf0f1;" />
            </children>
        </AnchorPane>

        <!-- Welcome Section -->
        <Label fx:id="welcomeLabel" layoutX="263.0" layoutY="46.0" text="Welcome" style="-fx-font-size: 18; -fx-font-weight: bold;">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <!-- User Info -->
        <ImageView fitHeight="75.0" fitWidth="74.0" layoutX="38.0" layoutY="36.0">
            <image>
                <Image url="@images/profileuser.png" />
            </image>
        </ImageView>
        <Label layoutX="41.0" layoutY="120.0" text="User Name" textFill="#2efc00" />
        <Label layoutX="42.0" layoutY="138.0" text="User Email" textFill="#2efc00" />

        <!-- Navigation Links -->
        <Hyperlink layoutX="62.0" layoutY="249.0" onAction="#onTechnologyHyperlinkClick" text="> Technology" style="-fx-font-size: 14; -fx-text-fill: #3498db;" />
        <Hyperlink layoutX="62.0" layoutY="274.0" onAction="#onHealthHyperlinkClick" text="> Health" style="-fx-font-size: 14; -fx-text-fill: #3498db;" />
        <Hyperlink layoutX="62.0" layoutY="300.0" onAction="#onSportsHyperlinkClick" text="> Sports" style="-fx-font-size: 14; -fx-text-fill: #3498db;" />
        <Hyperlink layoutX="62.0" layoutY="357.0" onAction="#onAgricultureHyperlinkClick" text="> Agriculture" style="-fx-font-size: 14; -fx-text-fill: #3498db;" />
        <Hyperlink layoutX="62.0" layoutY="382.0" onAction="#onWarHyperlinkClick" text="> War" style="-fx-font-size: 14; -fx-text-fill: #3498db;" />
        <Hyperlink layoutX="62.0" layoutY="332.0" onAction="#onAIHyperlinkClick" text="> AI" style="-fx-font-size: 14; -fx-text-fill: #3498db;" />

        <Hyperlink layoutX="34.0" layoutY="165.0" text="Recommended Articles" onAction="#onRecommendHyperlinkClick" style="-fx-font-size: 14; -fx-text-fill: #3498db;" />
        <Hyperlink layoutX="36.0" layoutY="190.0" text="Read History" onAction="#onReadHistoryClick" style="-fx-font-size: 14; -fx-text-fill: #3498db;" />
        <Hyperlink layoutX="34.0" layoutY="215.0" text="Other Categories" style="-fx-font-size: 14; -fx-text-fill: #3498db;" />

        <!-- Log Out Button -->
        <Button layoutX="75.0" layoutY="539.0" mnemonicParsing="false" text="Log Out" onAction="#handleLogout" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16; -fx-padding: 10;" />

        <!-- Articles Section -->
        <ScrollPane layoutX="212.0" layoutY="85.0" prefHeight="453.0" prefWidth="540.0" style="-fx-background-color: transparent;">
            <content>
                <TilePane fx:id="articleTilePane" hgap="10" vgap="10" prefColumns="3">
                    <!-- Articles will be added dynamically here -->
                </TilePane>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
