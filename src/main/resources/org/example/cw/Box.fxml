<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="200.0" prefWidth="200" style="-fx-border-color: #4CAF50; -fx-border-width: 2; -fx-background-color: #FAFAFA; -fx-padding: 10; -fx-spacing: 5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.cw.BoxController">
    <!-- Title Label with bold text and clickable behavior -->
    <Label fx:id="titleLabel" onMouseClicked="#handleArticleClick" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #081f93;" wrapText="true" />

    <!-- Content Preview Label with smaller font size and gray text -->
    <Label fx:id="contentPreview" style="-fx-font-size: 14; -fx-text-fill: #555;" wrapText="true" />

    <!-- Category Label with a smaller font size and gray text -->
    <Label fx:id="category" style="-fx-font-size: 14; -fx-text-fill: #555;" wrapText="true" />

    <!-- HBox containing buttons for like/dislike functionality -->
    <HBox alignment="CENTER" spacing="10">
        <!-- ❤️ Like button with red text and white background -->
        <Button fx:id="likeButton" onAction="#handleLikeButtonClick" style="-fx-background-color: #ffffff; -fx-font-size: 14; -fx-text-fill: #D32F2F;" text="❤️" />

        <!-- ❌ Dislike button with red text and white background -->
        <Button fx:id="dislikeButton" onAction="#handleDislikeButtonClick" style="-fx-background-color: #ffffff; -fx-font-size: 14; -fx-text-fill: #D32F2F;" text="❌" />
    </HBox>
</VBox>
