<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.cw.CreateAccountController">
    <children>
        <!-- Title -->
        <Label layoutX="180.0" layoutY="30.0" style="-fx-font-size: 24; -fx-font-weight: bold;" text="Create an Account" />

        <!-- Name -->
        <Label layoutX="50.0" layoutY="80.0" style="-fx-font-size: 14;" text="Name:" />
        <TextField fx:id="nameField" layoutX="200.0" layoutY="80.0" prefWidth="300.0" promptText="Enter your full name" />

        <!-- Date of Birth -->
        <Label layoutX="50.0" layoutY="130.0" style="-fx-font-size: 14;" text="Date of Birth:" />
        <TextField fx:id="dobField" layoutX="200.0" layoutY="130.0" prefWidth="300.0" promptText="dd/MM/yyyy" />

        <!-- Gender -->
        <Label layoutX="50.0" layoutY="180.0" style="-fx-font-size: 14;" text="Gender:" />
        <TextField fx:id="genderField" layoutX="200.0" layoutY="180.0" prefWidth="300.0" promptText="male/female/other" />

        <!-- Country -->
        <Label layoutX="50.0" layoutY="230.0" style="-fx-font-size: 14;" text="Country:" />
        <TextField fx:id="countryField" layoutX="200.0" layoutY="230.0" prefWidth="300.0" promptText="Enter your country" />

        <!-- Email -->
        <Label layoutX="50.0" layoutY="280.0" style="-fx-font-size: 14;" text="Email:" />
        <TextField fx:id="emailField" layoutX="200.0" layoutY="280.0" prefWidth="300.0" promptText="Enter your email" />

        <!-- Password -->
        <Label layoutX="50.0" layoutY="330.0" style="-fx-font-size: 14;" text="Password:" />
        <PasswordField fx:id="passwordField" layoutX="200.0" layoutY="330.0" prefWidth="300.0" promptText="Enter password" />

        <!-- Confirm Password -->
        <Label layoutX="50.0" layoutY="380.0" style="-fx-font-size: 14;" text="Confirm Password:" />
        <PasswordField fx:id="confirmPasswordField" layoutX="200.0" layoutY="380.0" prefWidth="300.0" promptText="Re-enter password" />

        <!-- Submit Button -->
        <Button fx:id="submitButton" layoutX="250.0" layoutY="450.0" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white;"
                text="Create Account" onAction="#handleSubmitButton" />
    </children>
</AnchorPane>
