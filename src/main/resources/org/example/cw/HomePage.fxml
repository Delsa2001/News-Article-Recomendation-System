<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.cw.HomePageController">
   <children>
      <!-- Sidebar -->
      <AnchorPane layoutX="-7.0" prefHeight="600.0" prefWidth="250.0" style="-fx-background-color: linear-gradient(to bottom right, #0a0f14, #2c3e50);">
         <children>
            <ImageView fitHeight="40.0" fitWidth="40.0" layoutX="20.0" layoutY="483.0">
               <image>
                  <Image url="@images/settings.png" />
               </image>
            </ImageView>
            <Label layoutX="73.0" layoutY="490.0" style="-fx-font-size: 16;" text="Settings" textFill="WHITE" />
            <Hyperlink layoutX="66.0" layoutY="523.0" style="-fx-text-fill: #3498db;" text="Profile" />
            <Button layoutX="65.0" layoutY="560.0" mnemonicParsing="false" onAction="#handleLogout" prefHeight="26.0" prefWidth="70.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 20px; -fx-border-radius: 20px; -fx-border-color: #c0392b; -fx-border-width: 2px;" text="Log Out" />
      
            <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="63.0" layoutY="36.0">
               <image>
                  <Image url="@images/profileuser.png" />
               </image>
               <effect>
                  <DropShadow blurType="GAUSSIAN" color="white" radius="20" />
               </effect>
            </ImageView>
         </children>
      </AnchorPane>

      <!-- Main Content -->
      <Label fx:id="welcomeLabel" layoutX="300.0" layoutY="100.0" style="-fx-font-size: 72px; -fx-font-weight: bold; -fx-text-fill: linear-gradient(from 0% 0% to 100% 100%, #f39c12, #e74c3c);" text="Welcome" />

      <Hyperlink layoutX="35.0" layoutY="170.0" onAction="#onRecommendHyperlinkClick" style="-fx-font-size: 16px; -fx-text-fill: #ecf0f1; -fx-text-decoration: none;" text="Recommended Articles" />
      <Hyperlink layoutX="35.0" layoutY="200.0" onAction="#onReadHistoryClick" style="-fx-font-size: 16px; -fx-text-fill: #ecf0f1; -fx-text-decoration: none;" text="Read History" />
      <Hyperlink layoutX="35.0" layoutY="230.0" style="-fx-font-size: 16px; -fx-text-fill: #ecf0f1; -fx-text-decoration: none;" text="Other Categories" />

      <Hyperlink layoutX="55.0" layoutY="280.0" onAction="#onAIHyperlinkClick" style="-fx-font-size: 16px; -fx-text-fill: #1abc9c;" text="&gt; AI" />
      <Hyperlink layoutX="55.0" layoutY="310.0" onAction="#onTechnologyHyperlinkClick" style="-fx-font-size: 16px; -fx-text-fill: #1abc9c;" text="&gt; Technology" />
      <Hyperlink layoutX="55.0" layoutY="340.0" onAction="#onHealthHyperlinkClick" style="-fx-font-size: 16px; -fx-text-fill: #1abc9c;" text="&gt; Health" />
      <Hyperlink layoutX="55.0" layoutY="370.0" onAction="#onSportsHyperlinkClick" style="-fx-font-size: 16px; -fx-text-fill: #1abc9c;" text="&gt; Sports" />
      <Hyperlink layoutX="55.0" layoutY="400.0" onAction="#onAgricultureHyperlinkClick" style="-fx-font-size: 16px; -fx-text-fill: #1abc9c;" text="&gt; Agriculture" />
      <Hyperlink layoutX="55.0" layoutY="430.0" onAction="#onWarHyperlinkClick" style="-fx-font-size: 16px; -fx-text-fill: #1abc9c;" text="&gt; War" />
   </children>
</AnchorPane>
