<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.TilePane?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.cw.TechnologyController" style="-fx-background-color: #E8F5E9;" prefWidth="800" prefHeight="600">
    <!-- Title -->
    <Label layoutX="280.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-text-fill: #2E7D32; -fx-font-weight: bold;" text="Technology Articles" />

    <!-- ScrollPane -->
    <ScrollPane fx:id="articleScrollPane" layoutX="25.0" layoutY="80.0" prefWidth="750.0" prefHeight="480.0" style="-fx-background-color: transparent;">
        <!-- TilePane inside ScrollPane -->
        <TilePane fx:id="articleTilePane" hgap="10" vgap="10" style="-fx-padding: 10;" prefColumns="3" alignment="CENTER">
            <!-- Articles will be dynamically added here -->
        </TilePane>
    </ScrollPane>
</AnchorPane>
