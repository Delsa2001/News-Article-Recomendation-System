      <Label layoutX="87.0" layoutY="140.0" style="-fx-font-size: 14; -fx-text-fill: #34495e;" text="Email" />
      <TextField fx:id="emailField" layoutX="87.0" layoutY="175.0" prefHeight="30.0" prefWidth="365.0" promptText="Enter your email" style="-fx-font-size: 14; -fx-padding: 5;" />

      <!-- Password Label and PasswordField -->
      <Label layoutX="87.0" layoutY="217.0" style="-fx-font-size: 14; -fx-text-fill: #34495e;" text="Password" />
      <PasswordField fx:id="passwordField" layoutX="87.0" layoutY="235.0" prefHeight="30.0" prefWidth="365.0" promptText="Enter your password" style="-fx-font-size: 14; -fx-padding: 5;" />

