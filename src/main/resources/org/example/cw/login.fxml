   <children>
      <!-- Title Label -->
      <Label layoutX="200.0" layoutY="50.0" prefHeight="74.0" prefWidth="200.0" style="-fx-font-size: 50; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Login" />

