<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="414.0" prefWidth="549.0" spacing="30.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.cw.WelcomeController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label alignment="CENTER" prefHeight="59.0" prefWidth="310.0" text="WELCOME">
        <font>
            <Font name="System Bold" size="50.0" />
        </font>
        <effect>
            <DropShadow blurType="GAUSSIAN" color="BLACK" radius="10" />
        </effect>
    </Label>

    <Button onAction="#handleNextButtonAction" fx:id="nextButton" prefWidth="200.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-base: #4CAF50; -fx-text-fill: white;" text="NEXT">

    <padding>
            <Insets bottom="10" left="30" right="30" top="10" />
        </padding>
    </Button>
</VBox>
